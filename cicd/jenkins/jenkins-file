String urlRepo = "https://github.com/jnsierra/api-article.git"

pipeline {
  agent any
  
  stages {
    stage('Clone Repo'){
      steps {
        echo 'Ini Building...'
        echo 'Esta es la url del repo: ' + urlRepo
	sh 'mkdir -p build'
	dir('build'){
	  git branch: 'develop', url: urlRepo
	}
	echo 'Fin Building...'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
      }
    }
    stage('Push'){
      steps{
        sh 'echo push'
      }
    }
    stage('Deploy'){
      steps{
        echo 'Deploying...'
      }
    }
  }
}
