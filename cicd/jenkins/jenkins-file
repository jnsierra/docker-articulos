pipeline {
  agent any
  
  stages {
    stage('Build'){
      steps {
        sh 'echo "Building.."'
        sh '''
            echo "Por cierto, puedo ejecutar mas acciones aqui"
            ls -lah
        '''
        
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
      }
    }
    stage('Deploy'){
      steps{
        echo 'Deploying...'
      }
    }
  }
}
